<% provide(:title, "Create albums") %>


<header class="intro">
  <div class="intro-body">
      <div class="container">
          <div class="row">
            <div class="col-md-6 col-md-offset-3 col-lg-5">
                <h2> Create Album </h2><br><br>
                  <h6>
                    <%= form_for(@album) do |f| %>

                      <%= f.label :nombre %><br>
                      <%= f.text_field :nombre, class: 'form-control'  %><br>

                      <%= f.label :genero %><br>
                      <%= f.select :genero, @generos%><br>

                      <%= f.label :lanzamiento %><br>
                      <%= f.date_select :lanzamiento, class: 'form-control'  %><br>

                      <%= f.label :numero_canciones, "Numero canciones"  %><br>
                      <%= f.text_field :numero_canciones, class: "form-control"  %><br>

                      <%= f.label :artist %><br>
                      <%= f.select :artist, @artists %><br><br>

                      <%= f.submit "Create", class: "btn btn-default btn-lg" %>
                    <% end %>
                  </h6>
              </div>
          </div>
      </div>
    </div>
</header>
