<% provide(:title, @album.nombre) %>


<header class="intro">
  <div class="intro-body">
      <div class="container">
          <div class="row">
            <div class="col-md-6 col-md-offset-3 col-lg-5">
              <h2> <%= @album.nombre %> </h2><br>

              <h5>

                <strong>Artista:</strong>
                <%= @album.artist %><br>

                <strong>Genero:</strong>
                <%= @album.genero %><br>

                <strong>Lanzamiento:</strong>
                <%= @album.lanzamiento %><br>

                <strong>Numero Canciones:</strong>
                <%= @album.numero_canciones %><br><br><br>

              </h5>
            </div>

              <h6>
                <table class="table">
                  <thead>
                    <tr>
                      <th>Nombre</th>
                      <th>Genero</th>
                      <th>Duracion</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @songs.each do |song| %>
                      <tr>
                        <td><%= link_to song.nombre, song %></td>
                        <td><%= song.genero %></td>
                        <td><%= song.duracion %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <br>
              </h6>

              <%= link_to 'Back', albums_path, class: "btn btn-default btn-lg"%>
        </div>
    </div>
  </div>
</header>
