<% provide(:title, @artist.nombre) %>



<header class="intro">
  <div class="intro-body">
      <div class="container">
          <div class="row">
            <div class="col-md-6 col-md-offset-3 col-lg-5">
              <h2> <%= @artist.nombre %> </h2><br>

              <h5>
                <strong>Lugar origen:</strong>
                <%= @artist.lugar_origen %><br>

                <strong>Descripcion:</strong>
                <%= @artist.descripcion %><br>

                <strong>Genero:</strong>
                <%= @artist.genero %><br>

                <strong>Periodo inicio:</strong>
                <%= @artist.periodo_inicio %><br>
              </h5>

              <h6>
                <table class="table">
                  <thead>
                    <tr>
                      <th>Nombre</th>
                      <th>Genero</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @artists.each do |artist| %>
                      <tr>
                        <td><%= link_to artist.nombre, artist %></td>
                        <td><%= artist.genero %></td>
                        <% if current_user.admin?%>
                          <td><%= link_to 'Edit', artist, method: :edit %></td>
                          <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <br>
              </h6>

                <%= link_to 'Back', artists_path, class: "btn btn-default btn-lg"%>
              </p>
            </div>
        </div>
    </div>
  </div>
</header>
