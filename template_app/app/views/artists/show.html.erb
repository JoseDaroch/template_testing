<% provide(:title, @artist.nombre) %>


<header class="intro">
  <div class="intro-body">
      <div class="container">
          <div class="row">
            <div class="col-md-6 col-md-offset-3 col-lg-5">
              <h2> <%= @artist.nombre %> </h2><br>

              <h5>
                <strong>Lugar origen:</strong>
                <%= @artist.lugar_origen %><br>

                <strong>Descripcion:</strong>
                <%= @artist.descripcion %><br>

                <strong>Genero:</strong>
                <%= @artist.genero %><br>

                <strong>Periodo inicio:</strong>
                <%= @artist.periodo_inicio %><br><br><br>
              </h5>
            </div>

              <h6>
                <table class="table">
                  <thead>
                    <tr>
                      <th>Album</th>
                      <th>Genero</th>
                      <th>Lanzamiento</th>
                      <th>Numero canciones</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @albums.each do |album| %>
                      <tr>
                        <td><%= link_to album.nombre, album %></td>
                        <td><%= album.genero %></td>
                        <td><%= album.lanzamiento %></td>
                        <td><%= album.numero_canciones %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <br>
              </h6>

              <%= link_to 'Back', artists_path, class: "btn btn-default btn-lg"%>
              </p>
        </div>
    </div>
  </div>
</header>
