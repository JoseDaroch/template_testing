<% provide(:title, @song.nombre) %>


<header class="intro">
  <div class="intro-body">
      <div class="container">
          <div class="row">
            <div class="col-md-6 col-md-offset-3 col-lg-5">
              <h2> <%= @song.nombre %> </h2><br>

              <h5>
                <strong>Artist:</strong>
                <%= @song.album.artist.nombre %><br>

                <strong>Album:</strong>
                <%= @song.album.nombre %><br>

                <strong>Genero:</strong>
                <%= @song.genero %><br>

                <strong>Duracion:</strong>
                <%= @song.duracion %><br>

              </h5>
              <%= link_to 'Back', songs_path, class: "btn btn-default btn-lg"%>

            </div>
      </div>
    </div>
  </div>
</header>
