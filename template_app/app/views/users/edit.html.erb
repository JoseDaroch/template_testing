<% provide(:title, "Edit user") %>


<!-- Intro Header -->
<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 col-lg-5">
                    <h2>Update your profile:</h2><br><br>
                      <h6>
                        <%= form_for(@user) do |f| %>
                          <%= render 'shared/error_messages' %>

                          <%= f.label :name %><br>
                          <%= f.text_field :name, class: 'form-control'  %><br>

                          <%= f.label :email %><br>
                          <%= f.email_field :email, class: 'form-control'  %><br>

                          <%= f.label :password %><br>
                          <%= f.password_field :password, class: 'form-control'  %><br>

                          <%= f.label :password_confirmation, "Confirmation" %><br>
                          <%= f.password_field :password_confirmation, class: 'form-control'  %><br>

                          <%= f.submit "Save changes", class: "btn btn-default btn-lg" %>
                        <% end %>

                        <div class= "gravatar_edit">
                          <%= gravatar_for @user %>
                          <a class= "btn btn-default btn-lg" href="http://gravatar.com/emails" target="_blank">Change</a>
                        </div>
                      </h6>
                </div>
            </div>
        </div>
    </div>
</header>
